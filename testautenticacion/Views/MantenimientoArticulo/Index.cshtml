@model IEnumerable<testautenticacion.Models.Articulo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/stylesCRUD.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <button type="submit" class="btn btn-primary">
        @Html.ActionLink("Agregar artículo", "Create", "MantenimientoArticulo", new { id = "btn-1" }, new { @class = "a-btn" })
    </button>


    <table class="table" style="margin:0.5em 1em;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }, new { @class = "a-btn" })
                    </button>
                    <button type="submit" class="btn btn-info">
                        @Html.ActionLink("Detalles", "Details", new { id = item.Codigo }, new { @class = "a-btn" })
                    </button>
                    <button type="submit" class="btn btn-danger">
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Codigo }, new { @class = "a-btn" })
                    </button>



                </td>
            </tr>
        }

    </table>

    <button type="submit" class="btn btn-warning">
        @Html.ActionLink("Regresar al Home", "Index", "Home",new {id = "btn-2" }, new { @class = "a-btn" })
    </button>
</body>
</html>
