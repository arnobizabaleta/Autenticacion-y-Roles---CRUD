                @Html.DisplayNameFor(model => model.Precio)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Precio)
            </dd>
    
        </dl>
    </div>
    <p>
        <button type="submit" class="btn btn-primary m-2">
            @Html.ActionLink("Editar", "Edit", new { id = Model.Codigo }, new { @class = "a-btn" })
        </button>

        <button type="submit" class="btn btn-warning">
            @Html.ActionLink("Regresar", "Index", "MantenimientoArticulo", new { id = "btn" }, new { @class = "a-btn" })
